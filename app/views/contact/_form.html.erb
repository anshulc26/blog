<div class="alert alert-success alert-dismissable hide" id="alert_notice">
  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
  <strong></strong> Thanks! We will be back to you soon...
</div>
<div class="alert alert-danger alert-dismissable hide" id="alert_error">
  <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
  <strong></strong> Error! There was an error sending your message.
</div>

<%= form_for(@contact, :url => {:controller => "contact", :action => "create"}, html: { role: 'form' }) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "Error") %>:</h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

  <div class="form-group">
    <label for="contact_name">Your name</label>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
  </div>
  <div class="form-group">
    <label for="contact_email">Your email address</label>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
  </div>
  <div class="form-group">
    <label for="contact_number">Your contact number</label>
    <%= f.text_field :number, class: "form-control", placeholder: "Enter number" %>
  </div>
  <div class="form-group">
    <label for="contact_message">Your message</label>
    <%= f.text_area :message, rows: "4", class: "form-control", placeholder: "Enter message" %>
  </div>
  <button type="submit" class="btn btn-green">Send</button>
<% end %>